# Email configuratie voor IMAP/SMTP toegang
EMAIL_ADDRESS=example@gmail.com
EMAIL_PASSWORD=appspecifiek_wachtwoord

# OpenAI API configuratie
OPENAI_API_KEY=sk-...

# Email server configuratie (optioneel - standaard Gmail)
IMAP_SERVER=imap.gmail.com
SMTP_SERVER=smtp.gmail.com
IMAP_PORT=993
SMTP_PORT=587

# Applicatie instellingen (optioneel)
CHECK_INTERVAL=30
MAX_EMAILS_PER_CHECK=10
BUSINESS_HOURS_START=9
BUSINESS_HOURS_END=17
DEFAULT_APPOINTMENT_DURATION=60
TIMEZONE=Europe/Amsterdam

# Logging instellingen (optioneel)
LOG_FILE=appointment_assistant.log
LOG_LEVEL=INFO
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
